<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/control_btn"
        android:layout_width="310px"
        android:layout_height="310px"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="156dp"
        android:background="#00FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/control_icon" />

    <ImageButton
        android:id="@+id/class_btn"
        android:layout_width="270px"
        android:layout_height="270px"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="284dp"
        android:background="#00FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/class_icon" />

    <ImageButton
        android:id="@+id/parent_btn"
        android:layout_width="305px"
        android:layout_height="305px"
        android:layout_marginStart="220dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="348dp"
        android:background="#00FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/parent_icon" />

    <ImageButton
        android:id="@+id/interface_btn"
        android:layout_width="415px"
        android:layout_height="415px"
        android:layout_marginStart="248dp"
        android:layout_marginLeft="248dp"
        android:layout_marginTop="468dp"
        android:background="#00FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/interface_icon" />

    <ImageButton
        android:id="@+id/thread_btn"
        android:layout_width="342px"
        android:layout_height="418px"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="552dp"
        android:background="#00FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/thread_icon" />

    <ImageView
        android:id="@+id/control_txt"
        android:layout_width="99dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="@+id/control_btn"
        app:layout_constraintTop_toTopOf="@+id/control_btn"
        app:srcCompat="@drawable/control_txt" />

    <ImageView
        android:id="@+id/class_txt"
        android:layout_width="84dp"
        android:layout_height="35dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="@+id/class_btn"
        app:layout_constraintTop_toTopOf="@+id/class_btn"
        app:srcCompat="@drawable/class_txt" />

    <ImageView
        android:id="@+id/parent_txt"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="72dp"
        app:layout_constraintStart_toStartOf="@+id/parent_btn"
        app:layout_constraintTop_toTopOf="@+id/parent_btn"
        app:srcCompat="@drawable/parent_txt" />

    <ImageView
        android:id="@+id/interface_txt"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="108dp"
        app:layout_constraintStart_toStartOf="@+id/interface_btn"
        app:layout_constraintTop_toTopOf="@+id/interface_btn"
        app:srcCompat="@drawable/interface_txt" />

    <ImageView
        android:id="@+id/thread_txt"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="84dp"
        app:layout_constraintStart_toStartOf="@+id/thread_btn"
        app:layout_constraintTop_toTopOf="@+id/thread_btn"
        app:srcCompat="@drawable/thread_txt" />

</androidx.constraintlayout.widget.ConstraintLayout>